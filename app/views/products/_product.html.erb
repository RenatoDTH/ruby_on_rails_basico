<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

  <p>
    <strong>Image:</strong>
    <% if product.image.attached? %>
      <%= image_tag product.image, style: "width: 200px; display: block"   %>
    <% end %>
  </p>
</div>
